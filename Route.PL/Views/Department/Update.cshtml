@model DepartmentVM
@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <h1>Details</h1>
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label asp-for="@Model.Id" class="form-label">Id</label>
            <input asp-for="@Model.Id" type="text" class="form-control" readonly>
        </div>
        <partial name="PartialViews/CreateUpdatePartialView"/>
        <div class="form-group mb-3">
            <label asp-for="@Model.DateOfCreation" class="form-label">Date Of Creation</label>
            <input asp-for="@Model.DateOfCreation" type="date" class="form-control" disabled>
            <span asp-validation-for="@Model.DateOfCreation" class="text-danger"></span>
        </div>
        <input type="submit" value="Update" class="btn btn-primary" />
    </form>
</div>

