@model IEnumerable<ApplicationRole>
@{
    ViewData["Title"] = "All Roles";
}


<div class="container">
    <h1>All Roles</h1>


    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(dept => dept.Id)</th>
                    <th>@Html.DisplayNameFor(dept => dept.Name)</th>
                    <th>@Html.DisplayNameFor(dept => dept.CreatedAt)</th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.CreatedAt.Day-@item.CreatedAt.Month-@item.CreatedAt.Year</td>
                        <partial name="_ButtonsPartialView" model="@item.Id"/>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <div class="alert alert-warning">
            <h3>No Roles Found!</h3>
        </div>
    }
    <a class="btn btn-success" asp-action="Create">Create New Role</a>
</div>

