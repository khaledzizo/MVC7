@model ApplicationRole

@{
    ViewData["Title"] = "Update";
}

<h1>Update Role</h1>
<br />
<br />

<div class="row">
    <div class="col-6">
        <form asp-action="Update" method="post">
            <input type="hidden" asp-for="Id"/>
            <partial name="PartialViews/CreateEditPV" />

            <div class="my-3">
                <a class="btn btn-info" asp-action="AddOrRemoveUsers" asp-route-roleId="@Model.Id" asp-route-users="">Add Or Remove Users</a>
            </div>

            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back</a>
        </form>
    </div>
</div>