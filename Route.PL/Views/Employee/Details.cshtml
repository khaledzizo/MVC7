@model EmployeeVM
@{
    ViewData["Title"] = "Details";
    var department = (Department) ViewBag.Department;
}


<div class="container">
    <h1>Employee Info.</h1>
    <div class="row">
        <div class="col-1">
            <img class="w-100" src="~/Files/Images/@Model.ImageName" alt="Can't load Image!" />
        </div>
    </div>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label asp-for="@Model.Name" for="name" class="form-label">Name</label>
            <input asp-for="@Model.Name" type="text" class="form-control" readonly>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Email" for="name" class="form-label">Email</label>
            <input asp-for="@Model.Email" type="text" class="form-control" readonly>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Address" for="name" class="form-label">Address</label>
            <input asp-for="@Model.Address" type="text" class="form-control" readonly>
            <span asp-validation-for="@Model.Address" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Salary" for="name" class="form-label">Salary</label>
            <input asp-for="@Model.Salary" type="number" class="form-control" readonly>
            <span asp-validation-for="@Model.Salary" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.DepartmentId" for="name" class="form-label">Department</label>
            <select asp-for="@Model.DepartmentId" class="form-select" aria-label="Default select example" disabled>
                <option value="1">@department.Name</option>
            </select>
        </div>

        <div class="form-group mb-3">
            <label asp-for="@Model.HireDate" for="name" class="form-label">Hire Date</label>
            <input asp-for="@Model.HireDate" type="date" class="form-control" readonly>
            <span asp-validation-for="@Model.HireDate" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <input asp-for="@Model.IsActive" class="form-check-input" type="checkbox" disabled>
            <label asp-for="@Model.IsActive" class="form-check-label">
                Is Active
            </label>
            <span asp-validation-for="@Model.IsActive" class="text-danger"></span>
        </div>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Update</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        <a class="btn btn-outline-secondary" asp-action="Index">Go Back</a>
    </form>
</div>